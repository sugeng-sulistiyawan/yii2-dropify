{
	"name": "diecoding/yii2-dropify",
	"description": "Override your input files with style for Yii2",
	"authors": [
		{
			"name": "Sugeng Sulistiyawan",
			"email": "sugeng.sulistiyawan@gmail.com"
		}
	],
	"type": "library",
	"keywords": [
		"yii2",
		"widget",
		"input",
		"dropify",
		"file",
		"jquery"
	],
	"license": "MIT",
	"support": {
		"issues": "https://github.com/sugeng-sulistiyawan/yii2-dropify/issues",
		"source": "https://github.com/sugeng-sulistiyawan/yii2-dropify"
	},
	"require": {
		"php": ">=7.4.0",
		"yiisoft/yii2": "~2.0",
		"npm-asset/dropify": "~0.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~9.5.0"
	},
	"autoload": {
		"psr-4": {
			"diecoding\\dropify\\": "src/"
		}
	},
    "autoload-dev": {
        "psr-4": {
            "diecoding\\dropify\\tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
